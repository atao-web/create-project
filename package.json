{
  "private": true,
  "name": "@atao60/create-project-monorepo",
  "version": "0.1.0",
  "workspaces": [
    "cli",
    "templates/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspace @atao60/create-project lint",
      "pre-push": "yarn workspace @atao60/create-project fullcheck"
    }
  },
  "scripts": {
    "start": "yarn workspace @atao60/create-project start",
    "link": "yarn workspace @atao60/create-project link",
    "depcheck": "cd cli && npx depcheck",
    "preversion": "yarn workspace @atao60/create-project fullcheck",
    "version": "yarn workspace @atao60/create-project build && git add -A",
    "postversion": "cross-env HUSKY_SKIP_HOOKS=1 git push && git push --tags",
    "publish": "yarn workspace @atao60/create-project publish"
  },
  "devDependencies": {
    "husky": "^4.0.7"
  }
}
